@{
    ViewBag.Title = "DepartmentMaster";
}

<div class="az-content-body">
    <div class="az-content-body-left">
        <div class="container d-block">
            <div class="row">
                <div id="fuelux-wizard-container" class="no-steps-container">

                    <div class="card bd-0">

                        <div class="card-body bd bd-t-0">
                            <form class="form-horizontal clearfix" id="departmentmaster-form" name="myform" action="@Url.Content("~/MASTERS/DEPARTMENTMASTER")" method="post">
                                <div class="card-header tx-medium bd-0 tx-white" style="background-image: linear-gradient(to bottom right, #0a225f, #0043fb); ">
                                    Department Master

                                </div><!-- card-header -->
                                <div class="row row-sm" style=" margin-top: 25px;">
                                    <div class="col-md-5 col-lg-4 mg-t-20 mg-md-t-0">
                                        <label class="form-control-label">Department Code: <span class="tx-danger">*</span></label>
                                        <input id="txtdepartmentcode" class="form-control" name="txtdepartmentcode" placeholder="Enter Department code" type="text" maxlength="50" required="" autofocus tabindex="1">
                                        <input type="hidden" id="hdautoid">
                                    </div><!-- col -->

                                    <div class="col-md-5 col-lg-4 mg-t-20 mg-md-t-0">
                                        <label class="form-control-label">Department Name: <span class="tx-danger">*</span></label>
                                        <input id="txtdepartmentname" class="form-control" name="txtdepartmentname" placeholder="Enter Department Name" type="text" maxlength="100" required="" tabindex="2">
                                        <input type="hidden" id="hdautoid">
                                    </div><!-- col -->

                                    <div class="col-md-5 col-lg-4 mg-t-20 mg-md-t-0">
                                        <div id="slWrapper3" class="parsley-select">
                                            <label class="control-label" for="ddlstatus">Status<span class="text-danger">*</span>:</label>
                                            <select class="form-control select2" id="ddlstatus" data-parsley-class-handler="#slWrapper3" data-parsley-errors-container="#slErrorContainer3" required="" tabindex="3">
                                            </select>
                                            <div id="slErrorContainer3"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-actions" style="text-align: center !important; margin-top: 50px; margin-bottom: 20px;">

                                    <button class="btn btn-primary" id="btnsubmit" type="submit" tabindex="4">
                                        <span id="actiontype">Save</span>
                                        <i class="typcn typcn-bookmark icon-on-left"></i>
                                    </button>
                                    <button class="btn btn-danger" type="button" id="btnclear" tabindex="5">
                                        <span id="actiontype">Clear</span>
                                        <i class="typcn typcn-social-at-circular icon-on-left"></i>
                                    </button>
                                </div>

                            </form>
                            <div class="card-header tx-medium bd-0 tx-white" style="border-radius: 5px; background-image: linear-gradient(to bottom right, #0a225f, #0043fb); ">

                                Department Master Details
                            </div><!-- card-header -->

                            <div id="dynamic-table_wrapper" class="dataTables_wrapper no-footer" style="margin-top: 20px;">
                                <table id="dynamic-table" class="table table-striped table-bordered table-hover checkupload">
                                </table>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

